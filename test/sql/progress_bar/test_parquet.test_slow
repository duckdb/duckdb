# name: test/sql/progress_bar/test_parquet.test_slow
# description: Test basic parquet reading
# group: [progress_bar]

require parquet

require tpch

statement ok
CALL dbgen(sf=0.1)

statement ok
copy lineitem TO '__TEST_DIR__/progress_bar_lineitem.parquet' (FORMAT 'parquet');

statement ok
copy lineitem TO '__TEST_DIR__/progress_bar_lineitem2.parquet' (FORMAT 'parquet');

statement ok
PRAGMA progress_bar_time=1

statement ok
PRAGMA disable_print_progress_bar

statement ok
SELECT
    l_returnflag,
    l_linestatus,
    sum(l_quantity) AS sum_qty,
    sum(l_extendedprice) AS sum_base_price,
    sum(l_extendedprice * (1 - l_discount)) AS sum_disc_price,
    sum(l_extendedprice * (1 - l_discount) * (1 + l_tax)) AS sum_charge,
    avg(l_quantity) AS avg_qty,
    avg(l_extendedprice) AS avg_price,
    avg(l_discount) AS avg_disc,
    count(*) AS count_order
FROM
     parquet_scan('__TEST_DIR__/progress_bar_lineitem.parquet')
WHERE
    l_shipdate <= CAST('1998-09-02' AS date)
GROUP BY
    l_returnflag,
    l_linestatus
ORDER BY
    l_returnflag,
    l_linestatus;

