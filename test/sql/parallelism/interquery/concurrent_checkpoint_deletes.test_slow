# name: test/sql/parallelism/interquery/concurrent_checkpoint_deletes.test_slow
# description: Test concurrent checkpoints while deleting
# group: [interquery]

statement ok
SET checkpoint_threshold='1TB'

statement ok
PRAGMA disable_checkpoint_on_shutdown

foreach sleep_time 0 25 50 75 100

statement ok
SET debug_checkpoint_sleep_ms=${sleep_time}

statement ok
ATTACH '__TEST_DIR__/concurrent_checkpoint_delete${sleep_time}.db' AS concurrent_checkpoint_wal

statement ok
CREATE TABLE concurrent_checkpoint_wal.integers(i INTEGER)

loop threadid 0 20

loop x 0 10

onlyif threadid<>10
statement ok
INSERT INTO concurrent_checkpoint_wal.integers SELECT * FROM range((${x} * 2000) + ${threadid} * 100, (${x} * 2000) + (${threadid} + 1) * 100);

endloop

endloop

concurrentloop threadid 0 20

loop x 0 10

onlyif threadid<>10
statement ok
DELETE FROM concurrent_checkpoint_wal.integers WHERE i >= (${x} * 2000) + ${threadid} * 100 AND i < (${x} * 2000) + (${threadid} + 1) * 100 AND i%2=0

endloop

loop x 0 4

onlyif threadid=10
statement ok
CHECKPOINT concurrent_checkpoint_wal

endloop

endloop

query II
SELECT COUNT(*), SUM(i) FROM concurrent_checkpoint_wal.integers
----
9500	94975000

statement ok
DETACH concurrent_checkpoint_wal

statement ok
ATTACH '__TEST_DIR__/concurrent_checkpoint_delete${sleep_time}.db' AS concurrent_checkpoint_wal

query II
SELECT COUNT(*), SUM(i) FROM concurrent_checkpoint_wal.integers
----
9500	94975000

statement ok
DETACH concurrent_checkpoint_wal

endloop
