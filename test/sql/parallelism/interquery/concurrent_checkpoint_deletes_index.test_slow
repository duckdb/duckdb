# name: test/sql/parallelism/interquery/concurrent_checkpoint_deletes_index.test_slow
# description: Test concurrent checkpoints while deleting
# group: [interquery]

statement ok
SET checkpoint_threshold='1TB'

statement ok
PRAGMA disable_checkpoint_on_shutdown

statement ok
SET index_scan_max_count=999999999

statement ok
SET index_scan_percentage=1

foreach sleep_time 0 25 50 75 100

statement ok
SET debug_checkpoint_sleep_ms=${sleep_time}

statement ok
ATTACH '__TEST_DIR__/concurrent_checkpoint_deletes_index${sleep_time}.db' AS concurrent_checkpoint_wal

statement ok
CREATE TABLE concurrent_checkpoint_wal.integers(i INTEGER PRIMARY KEY)

loop threadid 0 20

loop x 0 10

statement ok
INSERT INTO concurrent_checkpoint_wal.integers SELECT * FROM range((${x} * 2000) + ${threadid} * 100, (${x} * 2000) + (${threadid} + 1) * 100);

endloop

endloop

concurrentloop threadid 0 20

loop x 0 10

onlyif threadid<>10
statement ok
DELETE FROM concurrent_checkpoint_wal.integers WHERE i >= (${x} * 2000) + ${threadid} * 100 AND i < (${x} * 2000) + (${threadid} + 1) * 100 AND i%2=0

endloop

loop x 0 2

onlyif threadid=10
statement ok
CHECKPOINT concurrent_checkpoint_wal

endloop

endloop

query I
SELECT COUNT(*) FROM concurrent_checkpoint_wal.integers
----
10500

query I
SELECT COUNT(*) FROM concurrent_checkpoint_wal.integers WHERE i < 19_999
----
10499

statement ok
DETACH concurrent_checkpoint_wal

# delete the WAL
statement ok
COPY (select 42 where 1=0) TO '__TEST_DIR__/concurrent_checkpoint_deletes_index${sleep_time}.db.wal' (header 0)

statement ok
ATTACH '__TEST_DIR__/concurrent_checkpoint_deletes_index${sleep_time}.db' AS concurrent_checkpoint_wal

# we don't know how many rows there are because we truncated the WAL - but we know the index should be consistent with the rows in the table
query I
SELECT CASE WHEN regular_count = index_count THEN NULL ELSE {'regular': regular_count, 'index_count': index_count} END
FROM (
	SELECT (SELECT COUNT(*) FROM concurrent_checkpoint_wal.integers) regular_count,
	       (SELECT COUNT(*) FROM concurrent_checkpoint_wal.integers WHERE i < 19_999) + (SELECT COUNT(*) FROM concurrent_checkpoint_wal.integers WHERE i = 19_999) AS index_count
)
----
NULL

statement ok
DETACH concurrent_checkpoint_wal

endloop
