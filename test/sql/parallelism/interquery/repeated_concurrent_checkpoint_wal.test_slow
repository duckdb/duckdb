# name: test/sql/parallelism/interquery/repeated_concurrent_checkpoint_wal.test_slow
# description: Test consecutive concurrent checkpoints
# group: [interquery]

statement ok
SET checkpoint_threshold='1TB'

statement ok
PRAGMA disable_checkpoint_on_shutdown

statement ok
SET debug_checkpoint_sleep_ms=100

statement ok
ATTACH '__TEST_DIR__/repeated_concurrent_checkpoint.db' AS concurrent_checkpoint_wal (STORAGE_VERSION 'v1.5.0')

statement ok
CREATE TABLE concurrent_checkpoint_wal.integers(i INTEGER)

loop iteration 0 10

concurrentloop threadid 0 20

loop x 0 10

onlyif threadid<>10
statement ok
INSERT INTO concurrent_checkpoint_wal.integers SELECT * FROM range(${threadid} * 100, (${threadid} + 1) * 100);

endloop

onlyif threadid=10
statement ok
CHECKPOINT concurrent_checkpoint_wal

endloop

endloop

query II
