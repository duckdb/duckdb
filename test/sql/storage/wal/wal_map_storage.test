# name: test/sql/storage/wal/wal_map_storage.test
# description: Test maps with persistent storage and WAL
# group: [wal]

# load the DB from disk
load {LOCAL_TEMP_DIR}/map_storage_test.db

statement ok
PRAGMA disable_checkpoint_on_shutdown

statement ok
PRAGMA wal_autocheckpoint='1TB';

statement ok
CREATE TABLE a(b MAP(INTEGER,INTEGER));

statement ok
INSERT INTO a VALUES (MAP([1], [2])), (MAP([1, 2, 3], [4, 5, 6]));

query I
SELECT * FROM a;
----
{1=2}
{1=4, 2=5, 3=6}

restart

statement ok
PRAGMA disable_checkpoint_on_shutdown

statement ok
PRAGMA wal_autocheckpoint='1TB';

query I
SELECT * FROM a;
----
{1=2}
{1=4, 2=5, 3=6}

restart

query I
SELECT * FROM a;
----
{1=2}
{1=4, 2=5, 3=6}

restart

query I
SELECT * FROM a;
----
{1=2}
{1=4, 2=5, 3=6}
