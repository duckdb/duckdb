# description: Test writing large strings with deletes
# group: [optimistic_write]

require parquet

# load the DB from disk
load {LOCAL_TEMP_DIR}/optimistic_write_large_strings_deletes.db

statement ok
CREATE TABLE test(val VARCHAR);

statement ok
INSERT INTO test VALUES (NULL);

statement ok
COPY (SELECT 'hello' AS str FROM range(250000)) TO '{TEMP_DIR}/small_strings.parquet';

statement ok
COPY (SELECT repeat('X', len) AS str FROM (VALUES (903), (4932)) t(len)) TO '{TEMP_DIR}/large_strings.parquet';

statement ok
BEGIN

statement ok
INSERT INTO test FROM read_parquet([
	'{TEMP_DIR}/small_strings.parquet',
	'{TEMP_DIR}/large_strings.parquet']
);

query I
SELECT MAX(strlen(val)) FROM test
----
4932

query I
DELETE FROM test WHERE val='hello'
----
250000

query I
SELECT MAX(strlen(val)) FROM test
----
