	'r1': {
		'a': 'blabla',
		'b': 3
	},
	'r2': {
		'a': 'world',
		'b': 18,
		'c': NULL
	}
}

query I
SELECT * FROM a
----
{'r1': {'a': blabla, 'b': 3}, 'r2': {'a': world, 'b': 18, 'c': NULL}}

query I
SELECT c['r1']['a'] from a
----
blabla

restart

statement ok
PRAGMA force_compression='${compression}'

query I
SELECT * FROM a
----
{'r1': {'a': blabla, 'b': 3}, 'r2': {'a': world, 'b': 18, 'c': NULL}}

query I
