----
1

query T
SELECT having_macro(6)
----
NULL

# UNION in a macro
statement ok
CREATE MACRO union_macro(x, y, z) AS (SELECT x IN (SELECT y UNION ALL SELECT z))

query T
SELECT union_macro(1, 2, 3)
----
false

query T
SELECT union_macro(1, 2, 1)
----
true

query T
SELECT union_macro(1, 1, 2)
----
true

