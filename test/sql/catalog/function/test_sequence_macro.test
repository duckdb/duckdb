# recursive CTE with sequences
statement ok
CREATE MACRO in_next_n(x, s, n) AS x IN (
    WITH RECURSIVE cte AS (
            SELECT nextval(s) AS nxt, 1 AS iter
        UNION ALL
            SELECT nextval(s), iter + 1
            FROM cte
            WHERE iter < n
    )
    SELECT nxt
    FROM cte
)

query T
SELECT in_next_n(3, 'seq', 5);
----
1

query T
SELECT in_next_n(3, 'seq', 5);
----
0

query T
