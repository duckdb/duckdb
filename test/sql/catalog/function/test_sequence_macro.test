----
1

# overlapping param/column names can be disambiguated
statement ok
CREATE MACRO in_next_n2(x, s, n) AS x IN (
    WITH RECURSIVE cte AS (
            SELECT nextval(s) AS nxt, n AS n
        UNION ALL
            SELECT nextval(s), cte.n - 1
            FROM cte
            WHERE cte.n > 1
    )
    SELECT nxt
    FROM cte
)

query T
SELECT in_next_n2(17, 'seq', 5);
----
1

