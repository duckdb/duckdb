statement ok
CREATE TABLE agency (
	agency_id TEXT,
	agency_id_2 TEXT,
	agency_name TEXT NOT NULL,
	PRIMARY KEY (agency_id, agency_id_2)
);

statement ok
CREATE TABLE routes (
	route_id TEXT PRIMARY KEY,
	agency_id TEXT,
	FOREIGN KEY (route_id, agency_id) REFERENCES agency
