----
[6, 6, 6]
[2, 4, 6]
NULL
[NULL, 103, 15]

query I
SELECT list_transform(a, (x, i) -> x + i + list_any_value(a)) FROM tbl;
----
[11, 11, 11]
[3, 5, 7]
NULL
[NULL, 204, 116]

