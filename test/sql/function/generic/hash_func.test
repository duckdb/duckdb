# Maps
statement ok
CREATE TABLE maps AS
	SELECT * FROM (VALUES
		(MAP([1], ['TGTA'])),
		(MAP([1, 2], ['CGGT', 'CCTC'])),
		(MAP([], [])),
		(MAP([1, 2, 3], ['TCTA', NULL, 'CGGT'])),
		(MAP([1, 2, 3, 4, 5], ['TGTA', 'CGGT', 'CCTC', 'TCTA', 'AGGG'])),
