# Issue #2498: Identical nested lists should have the same hash
statement ok
CREATE TABLE issue2498 AS SELECT * FROM (VALUES
	(24, {'x': [{'l4': [52, 53]}, {'l4': [54, 55]}]}),
	(34, {'x': [{'l4': [52, 53]}, {'l4': [54, 55]}]})
) tbl(v, k);

query II
