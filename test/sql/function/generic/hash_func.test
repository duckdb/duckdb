# Structs
statement ok
CREATE TABLE structs AS
	SELECT * FROM (VALUES
		({'i': 5, 's': 'string'}),
		({'i': -2, 's': NULL}),
		({'i': NULL, 's': 'not null'}),
		({'i': NULL, 's': NULL}),
