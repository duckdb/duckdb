# Various intervals
statement ok
CREATE TABLE intervals AS SELECT iv FROM (VALUES
	(INTERVAL 1 year),
	(INTERVAL (-1) year),
	(INTERVAL 1 month),
	(INTERVAL (-1) month),
	(INTERVAL 13 month),
	(INTERVAL (-15) month),
	(INTERVAL 1 day),
	(INTERVAL (-1) day),
	(INTERVAL 32 day),
	(INTERVAL (-40) day),
	(INTERVAL 1 hour),
	(INTERVAL (-1) hour),
	(INTERVAL 11 hour),
	(INTERVAL (-14) hour),
	(INTERVAL 1 minute),
	(INTERVAL (-1) minute),
	(INTERVAL 6 minute),
	(INTERVAL (-72) minute),
	(INTERVAL 1 second),
	(INTERVAL (-1) second),
	(INTERVAL 23 second),
	(INTERVAL (-118) second),
	(INTERVAL 1 millisecond),
	(INTERVAL (-1) millisecond),
	(INTERVAL 910 millisecond),
	(INTERVAL (-150) millisecond),
	(INTERVAL 1 microsecond),
	(INTERVAL (-1) microsecond),
	(INTERVAL 612 microsecond),
	(INTERVAL (-485) microsecond)
) tbl(iv);

