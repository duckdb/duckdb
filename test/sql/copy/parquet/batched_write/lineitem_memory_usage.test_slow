# name: test/sql/copy/parquet/batched_write/lineitem_memory_usage.test_slow
# description: Batched lineitem write memory usage
# group: [batched_write]

require parquet

require tpch

load {LOCAL_TEMP_DIR}/lineitem_memory_test.db

statement ok
CALL dbgen(sf=1)

statement ok
COPY lineitem TO '{TEMP_DIR}/lineitem_memory_usage.parquet'

restart

# copy from one parquet file to another in a memory constrained environment
statement ok
SET memory_limit='500MB'

statement ok
COPY '{TEMP_DIR}/lineitem_memory_usage.parquet' TO '{TEMP_DIR}/lineitem_memory_usage_copy.parquet';

# ensure the parquet files hold the same content in the same order
statement ok
SET memory_limit='2GB';

query IIIIIIIIIIIIIIIII
SELECT *, row_number() OVER () as rownum FROM '{TEMP_DIR}/lineitem_memory_usage.parquet'
EXCEPT
SELECT *, row_number() OVER () as rownum FROM '{TEMP_DIR}/lineitem_memory_usage_copy.parquet';
----
