# name: test/sql/copy/parquet/parquet_metadata_cache.test
# description: Test parquet metadata cache
# group: [parquet]

require parquet

statement ok
SET parquet_metadata_cache=true;

# test the cached file
query II
select * from parquet_scan('{DATA_DIR}/parquet-testing/cache/cache1.parquet')
----
1	hello

query II
select * from parquet_scan('{DATA_DIR}/parquet-testing/cache/cache1.parquet')
----
1	hello

# writer requires vector_size >= 64
require vector_size 64

# copy cache1.parquet to cached.parquet
statement ok
COPY (
	SELECT * FROM parquet_scan('{DATA_DIR}/parquet-testing/cache/cache1.parquet')
	)
TO '{TEMP_DIR}/cached.parquet' (FORMAT 'parquet')

query II
select * from parquet_scan('{TEMP_DIR}/cached.parquet')
----
1	hello

# copy cache2.parquet to cached.parquet
statement ok
COPY (
	SELECT * FROM parquet_scan('{DATA_DIR}/parquet-testing/cache/cache2.parquet')
	)
TO '{TEMP_DIR}/cached.parquet' (FORMAT 'parquet')

query II
select * from parquet_scan('{TEMP_DIR}/cached.parquet')
----
0	10
1	20
2	30


# test two files with the same name on different directories
query II
select * from parquet_scan('{DATA_DIR}/parquet-testing/glob/t1.parquet')
----
1	a

query II
select * from parquet_scan('{DATA_DIR}/parquet-testing/glob2/t1.parquet')
----
3	c

# test using *
query I
select count(*) from parquet_scan('{DATA_DIR}/parquet-testing/glob/*.parquet')
----
2
