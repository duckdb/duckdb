# name: test/sql/copy/parquet/writer/partition_without_hive.test
# description: Test writing partitioned files WITHOUT hive partitioning
# group: [writer]

require parquet

statement ok
CREATE TABLE t1(part_key INT, val INT);

statement ok
INSERT INTO t1 SELECT i%2, i FROM range(10) t(i);

statement ok
COPY t1 TO '{TEMP_DIR}/hive_filters' (FORMAT PARQUET, PARTITION_BY part_key, HIVE_FILE_PATTERN false, WRITE_PARTITION_COLUMNS true);

query I
SELECT file.replace('{TEMP_DIR}', '').replace('\', '/') FROM GLOB('{TEMP_DIR}/hive_filters/*.parquet') ORDER BY ALL
----
/hive_filters/data_0.parquet
/hive_filters/data_1.parquet

query II
FROM '{TEMP_DIR}/hive_filters/*.parquet' EXCEPT ALL FROM t1
