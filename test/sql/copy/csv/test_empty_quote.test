# name: test/sql/copy/csv/test_empty_quote.test
# description: Test reading a CSV file with an empty quote
# group: [csv]

statement ok
PRAGMA enable_verification


statement ok
CREATE TABLE no_quote(a VARCHAR, b VARCHAR);

# empty quote
query I
COPY no_quote FROM '${TEST_DATA_LOC}/csv/no_quote.csv' ( QUOTE '', ESCAPE '', DELIM '|');
----
3

query TT
SELECT * FROM no_quote;
----
"hello	world
h'ow do you	do"
'I am'	"here"

# empty quote in read_csv function
query TT
SELECT * FROM read_csv('${TEST_DATA_LOC}/csv/no_quote.csv', auto_detect=1, quote='');
----
"hello	world
h'ow do you	do"
'I am'	"here"
