# name: test/sql/copy/csv/csv_external_access.test
# description: Test that enable_external_access blocks CSV readers
# group: [csv]

statement ok
PRAGMA enable_verification

statement ok
CREATE TABLE date_test(d date);

statement ok
COPY date_test FROM '${TEST_DATA_LOC}/csv/test/date.csv';

statement ok
SET enable_external_access=false;

statement error
SELECT * FROM read_csv('${TEST_DATA_LOC}/csv/test/date.csv', columns = {'d': 'DATE'});
----
Permission Error

statement error
SELECT * FROM read_csv_auto('${TEST_DATA_LOC}/csv/test/date.csv');
----
Permission Error

statement error
COPY date_test FROM '${TEST_DATA_LOC}/csv/test/date.csv';
----
Permission Error

statement error
COPY date_test TO '${TEST_TEMP_LOC}/date.csv'
----
Permission Error

# we also can't just enable external access again
statement error
SET enable_external_access=true;
----
Cannot change enable_external_access setting while database is running

# sniffer also respects external access flag
statement error
FROM sniff_csv('${TEST_DATA_LOC}/csv/test/date.csv');
----
Permission Error
