# test glob parsing
query I
SELECT COUNT(*) FROM glob('test/sql/copy/csv/data/glob/*/*.csv')
----
5

# we can also use windows file slashes
query I
SELECT COUNT(*) FROM glob('test\sql\copy\csv\data\glob\*\*.csv')
----
5

# consecutive slashes are ignored
query I
SELECT COUNT(*) FROM glob('test//sql////copy//csv/////data///glob///*//////*.csv')
----
5

