# Struct with union
statement ok
CREATE TABLE tbl2 (struct_union STRUCT(str VARCHAR, alt UNION(k VARCHAR, v INT)))

statement ok
INSERT INTO tbl2 VALUES 
    ({'str': 'key1', 'alt': 1}), 
    ({'str': 'key2', 'alt': 'key2'}), 
    ({'str': NULL, 'alt': NULL}), 
    ({'str': NULL, 'alt': union_value(v := NULL)}),
    ({'str': 'key3', 'alt': union_value(k := NULL)}),
    ({'str': 'key4', 'alt': 'key2'})

query I
SELECT * FROM tbl2
----
{'str': key1, 'alt': 1}
{'str': key2, 'alt': key2}
{'str': NULL, 'alt': NULL}
{'str': NULL, 'alt': NULL}
{'str': key3, 'alt': NULL}
{'str': key4, 'alt': key2}

query II
SELECT * FROM tbl1 JOIN tbl2 ON tbl1.union_struct.str = tbl2.struct_union.alt.k
----
key2	{'str': key4, 'alt': key2}
key2	{'str': key2, 'alt': key2}