# test that we can read a list of longer than STANDARD_VECTOR_SIZE properly
statement ok
copy (select list(to_json({duck: 42})) from range(10000)) to '__TEST_DIR__/my_file.json' (format csv, quote '')

query T
select count(*) from read_json('__TEST_DIR__/my_file.json', columns={duck: 'INTEGER'}, format='array_of_objects')
----
10000

query T
select sum(duck) = 42*10000 from read_json('__TEST_DIR__/my_file.json', columns={duck: 'INTEGER'}, format='array_of_objects')
----
true

# read_json_auto also understands array of objects
query T
select count(*) from '__TEST_DIR__/my_file.json'
----
10000

query T
select sum(duck) = 42*10000 from '__TEST_DIR__/my_file.json'
----
true

