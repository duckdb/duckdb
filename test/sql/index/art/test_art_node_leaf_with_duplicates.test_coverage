# name: test/sql/index/art/test_art_node_leaf_with_duplicates.test_coverage
# description: ART Node Leaf with removing duplicated keys
# group: [art]

statement ok
PRAGMA enable_verification

statement ok
CREATE TABLE integers(i integer)

statement ok
CREATE INDEX i_index ON integers(i)

# insert 4 elements
loop i 0 4

statement ok
INSERT INTO integers VALUES (1);

endloop

# verify counts

query I
SELECT COUNT(*) FROM integers WHERE i = 1
----
4

# verify sums

query I
SELECT sum(i) FROM integers WHERE i <= 2
----
4

# now delete all elements

statement ok
DELETE FROM integers WHERE i = 1

# verify counts

query I
SELECT COUNT(*) FROM integers WHERE i = 1
----
0

query I
SELECT COUNT(*) FROM integers
----
0

# insert 1024 elements
loop i 0 1024

statement ok
INSERT INTO integers VALUES (1);

endloop

# verify counts

query I
SELECT COUNT(*) FROM integers WHERE i = 1
----
1024

# verify sums

query I
SELECT sum(i) FROM integers WHERE i <= 2
----
1024

# now delete all elements

statement ok
DELETE FROM integers WHERE i = 1

# verify counts

query I
SELECT COUNT(*) FROM integers WHERE i = 1
----
0

query I
SELECT COUNT(*) FROM integers
----
0

# insert 3000 elements: 1
loop i 0 3000

statement ok
INSERT INTO integers VALUES (1);

endloop

# insert 1024 elements: 2
loop i 0 1024

statement ok
INSERT INTO integers VALUES (2);

endloop

# verify counts

