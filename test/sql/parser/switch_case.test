statement ok
CREATE TABLE nums AS FROM range(5) tbl(i);

query I
SELECT SWITCH(i % 2, MAP { 0 : 'even', 1 : 'odd'}, 'error') FROM nums ORDER BY i;
----
even
odd
even
odd
even

query T
SELECT
    CASE (i % 2)
        WHEN 0 THEN 'even'
        WHEN 1 THEN 'odd'
        ELSE 'error'
    END
FROM nums
ORDER BY i;
----
even
odd
even
odd
even

