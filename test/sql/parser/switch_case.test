CREATE TABLE null_test AS FROM VALUES (1), (NULL), (2) i(val);

query I
SELECT switch(val, MAP { 1 : 'one', NULL : 'is_null'}, 'other') FROM null_test ORDER BY val;
----
one
other
other

query I
SELECT
    CASE val
        WHEN 1 THEN 'one'
        WHEN NULL THEN 'is_null'
        ELSE 'other'
    END
FROM null_test
ORDER BY val;
----
one
other
other