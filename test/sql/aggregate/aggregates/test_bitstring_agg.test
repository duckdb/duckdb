statement ok
PRAGMA verify_external

require skip_reload

# test tinyints
statement ok
CREATE TABLE tinyints(i TINYINT)

statement ok
INSERT INTO tinyints VALUES(1), (8), (3), (12), (7), (1), (2), (8)

query I 
SELECT BITSTRING_AGG(i) FROM tinyints
----
111000110001

query I
SELECT bit_count(BITSTRING_AGG(i)) FROM tinyints WHERE i <= 7
----
4

