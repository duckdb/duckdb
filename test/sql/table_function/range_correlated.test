# nested ranges
query I
SELECT COUNT(*) FROM range(0,10) AS _(r1), range(r1,10) __(r2);
----
55

# large result
query I
SELECT COUNT(*) FROM (SELECT 10000) AS _(u), generate_series(u) __(s);
----
10001

# date
query I
