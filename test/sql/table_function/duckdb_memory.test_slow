require noforcestorage

require vector_size 2048

statement ok
set memory_limit='20mb';

statement ok
set max_temp_directory_size='150MiB';

loop i 0 5

statement ok
drop table if exists tmp1;

statement ok
create or replace temp table tmp1 as select * from range(15_000_000);

