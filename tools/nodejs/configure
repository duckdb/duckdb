#!/bin/sh

set -e
set -x

cd `dirname $0`

if [ ! -f "../../scripts/amalgamation.py" ]; then
	echo "Could find neither the amalgamation build script"
	exit 1
fi

(cd ../.. && python scripts/amalgamation.py --source=tools/nodejs/duckdb.cpp --header=tools/nodejs/duckdb.hpp)
