# Editor configuration file, this tells github.com
# to use the correct tab size for ORCA, which is 4

# top-most EditorConfig file
root = true

charset = utf-8

# 4 space indentation
[*.{cpp,h,py}]
indent_style = tab
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# XML/DXL files, indent 2 spaces
[*.{dxl,mdp}]
indent_style = space
indent_size = 2
